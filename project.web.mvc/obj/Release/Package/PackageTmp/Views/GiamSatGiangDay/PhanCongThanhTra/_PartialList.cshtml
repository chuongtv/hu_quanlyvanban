@model MvcPaging.IPagedList<nvngoc31122015.giamsatgiangday.library.GiamSatGiangDay.ListPhanCongThanhTraView>
@using MvcPaging

@{var i = 1;}

<div class="table-responsive">
    @if (Model.TotalItemCount > 0)
    {
        <div class="p-b-10">
            Kết quả tìm kiếm: <b>@Model.TotalItemCount</b> Thông tin phân công
        </div>
        <text>
            <table class="table table-bordered datatables dataTable" id="tablelist">
                <thead>
                    <tr>
                        <th class="text-center w-30">
                            <input id="CheckBoxAll" onclick="javascript: checkAlllist('#listcheckall',this);" type="checkbox" />
                        </th>
                        <th class="text-center w-30">
                            #
                        </th>
                        <th class="text-center" style="width:100px;">@Html.DisplayNameFor(model => Model[0].MaThanhTra)</th>
                        <th class="text-left" style="width:250px;">
                            @Html.DisplayNameFor(model => Model[0].HoTenThanhTra)
                        </th>
                        <th style="width:150px;">@Html.DisplayNameFor(model => Model[0].KhoangThoiGian)</th>
                        <th>@Html.DisplayNameFor(model => Model[0].ThongTinTruc)</th>
                        <th style="width:100px;"></th>
                    </tr>
                </thead>
                <tbody id="listcheckall">
                    @foreach (var item in Model)
                    {
                        <tr datathoikhoabieu="@item.ThongTinPhanCongThanhTra" class="showhim">
                            <td class="text-center">
                                <input type="checkbox" class="checkbox-item" value="@item.ThongTinPhanCongThanhTra" />
                            </td>
                            <td class="text-center">
                                @Html.Raw((Model.PageNumber - 1) * Model.PageSize + i)
                                @{i++;}
                            </td>
                            <td class="text-center">
                                @Html.Raw(item.MaThanhTra)
                            </td>
                            <td class="text-left">
                                @Html.Raw(item.HoTenThanhTra)
                            </td>
                            <td class="text-left">
                                @Html.Raw(item.KhoangThoiGian)
                            </td>
                            <td class="text-left ">
                                <div class="slipsistext">
                                    <a data-otf-action="@Url.Action("ThongTinPhanCongThanhTraChiTiet", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@item.ThongTinPhanCongThanhTra"
                                       data-toggle="modal" onclick="GiamSatGiangDay_PhanCongThanhTra_GetViewDetail(this)"
                                       data-target="#modalGiamSatGiangDay_Detail" title="Xem chi tiết ">@Html.Raw(item.ThongTinTruc)</a>
                                </div>
                            </td>
                            <td class="text-right">
                                <a href="@Url.Action("PhanCongLichTrucCreate", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@item.ThongTinPhanCongThanhTra"
                                   title="Chỉnh sửa thông tin lịch trực">
                                    <i class="fa fa-lg fa-pencil-square-o text-info"></i>
                                </a>
                            </td>
                        </tr>
                                    }
                </tbody>
            </table>
        </text>
                                    }
                                    else
                                    {
                                        <text><br />
    <div class="alert alert-dismissable alert-info">
        <strong>Yêu cầu tìm kiếm lúc @{ var date = DateTime.Now; } @date.ToString("HH:mm:ss dd/MM/yyyy") không có dữ liệu</strong>
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
    </div>
                                        </text>
                                    }
    <div class="pager">
        @if (Model.TotalItemCount > Model.PageSize)
        {

            <text>

                @Html.Raw(Ajax.Pager(
                       new Options
                       {
                           PageSize = Model.PageSize,
                           TotalItemCount = Model.TotalItemCount,
                           CurrentPage = Model.PageNumber,
                           ItemTexts = new ItemTexts() { Next = "Next", Previous = "Previous", Page = "" },
                           ItemIcon = new ItemIcon() { First = "icon-backward", Previous = "icon-chevron-left", Next = "icon-chevron-right", Last = "icon-forward" },
                           TooltipTitles = new TooltipTitles() { Next = "Next page", Previous = "Previous page", Page = "Page {0}." },
                           Size = Size.normal,
                           Alignment = Alignment.centered,
                           IsShowControls = true,
                           IsShowFirstLast = true,
                           CssClass = ""
                       },
                       new AjaxOptions
                       {
                           UpdateTargetId = "GiamSatGiangDay_PhanCongThanhTra_DS_content"
                       }, new
                       {
                           controller = "GiamSatGiangDay",
                           action = "PhanCongThanhTraGet_List",
                           NamHoc = @ViewData["NamHoc"],
                           TuNgay = @ViewData["TuNgay"],
                           DenNgay = @ViewData["DenNgay"],
                           ThanhTraGuid = @ViewData["ThanhTraGuid"]
                       }))
            </text>
        }
    </div>
</div>
<style>
    #tablelist tr:hover {
        background-color: #e8e8ec;
    }

    .slipsistext {
        white-space: nowrap;
        width: 450px;
        overflow: hidden; /* "overflow" value must be different from "visible" */
        text-overflow: ellipsis;
    }
</style>
@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            loadSelect("GiamSatGiangDay_PhanCongThanhTra", "PhanCongThanhTra");
            $('#tablelist tbody tr').hover(function () {
                $(this).addClass('hover');
            }, function () {
                $(this).removeClass('hover');
            });
        </script>
, true);
}



