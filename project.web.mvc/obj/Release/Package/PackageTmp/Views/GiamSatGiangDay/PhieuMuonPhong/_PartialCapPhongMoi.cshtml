@model nvngoc31122015.giamsatgiangday.library.PhieuMuonPhong.PhongDuocCapView

<div class="modal-content">
    <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
        <h4 class="modal-title">Thông tin phòng</h4>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm(
                                    "PhieuMuonPhongCreateChiTiet",
                                    "GiamSatGiangDay",
                                    new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,//cach thuc update du lieu. Thay the hay them vao
                                    HttpMethod = "POST",
                                    UpdateTargetId = "modalQLPhieuMuonPhong_CapPhong_c",
                                    LoadingElementId = "loader"
                                }, new { @class = "form-horizontal", id = "frm_CreateChiTietPhieuMuonPhongChiTiet" }))
        {


            @Html.HiddenFor(model => Model.PhongGuid)
            @Html.HiddenFor(model => Model.PhieuMuonPhongGuid)
             @Html.HiddenFor(model => Model.NgayMuonMuon)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)




           

            <div class="form-group">
                @Html.LabelFor(model => model.NgayMuonMuon, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                   
                        <div class="input-group">
                            <label class="control-label">@Model.NgayMuonMuon.Value.ToString("dd/MM/yyyy")</label>
                          
                        </div>
                    
                </div>

            </div>
             <div class="form-group">
                @Html.LabelFor(model => Model.CaGuid, new { @class = "col-sm-3 control-label", @for = "DDL_CaGuid" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => Model.CaGuid, new SelectList(Model.ListCaGuid, "ValueString", "Name"), new { @class = "form-control chosen-select", id = "DDL_CaGuid" })
                    @Html.ValidationMessageFor(model => Model.CaGuid, null, new { @class = "text-danger" })
                </div>

            </div>
            

        }

    </div>
    <div class="modal-footer">


        <div class="col-sm-12  text-center">



            <a href="javascript:void(0)"
                    @*data-otf-action="@Url.Action("DanhSachPhongChuaChon", "GiamSatGiangDay", null, Request.Url.Scheme)"
                    data-otf-target="#DanhSachPhong_Content"
                    data-otf-actiondachon="@Url.Action("DanhSachPhongDaCapByPhieuMuonPhongGuid", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhieuMuonPhongGuid"
                    data-otf-targetdachon="#DanhSachPhongDaCap"*@
                    data-otf-form="#frm_CreateChiTietPhieuMuonPhongChiTiet"
                    onclick="QLPhieuMuonPhong_ChiTietPhieuMuonPhongChiTiet_OnSaveExit(this)" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Cấp phòng này
            </a>
            &nbsp;hoặc&nbsp;

            <a class="btn btn-link"
               data-otf-btn="#GiamSatGiangDay_PhieuMuonPhong_TimPhong_buttonsearch"
               data-otf-target="#DanhSachPhong_Content"
               data-otf-actiondachon="@Url.Action("PhieuMuonPhong_GetPhongDaCapByPhieuMuonPhongGuid", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhieuMuonPhongGuid"
               data-otf-targetdachon="#DanhSachPhongDaCap"
               aria-hidden="true" data-dismiss="modal" onclick="QLPhieuMuonPhong_ChiTietPhieuMuonPhongChiTiet_BakList(this)">Quay lại</a>



        </div>
    </div>

</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            //Su dung cau hinh dropdownlist
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Lỗi! Vui lòng chọn ít nhất 1 mục.' },
                '.chosen-select-width': { width: "95%" }
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }


            $('#data_ChiTietPhieuMuonPhongChiTiet_NgayMuonPhong .input-group.date').datepicker({
                format: 'dd/mm/yyyy',
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                onSelect: function(dateText, inst){
                    alert(dateText);
                }
            });
        </script>
, true);
}




