@model nvngoc31122015.giamsatgiangday.library.GiamSatGiangDay.CreateCauHinhCaHocView

<div class="modal-content">
    <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
        <h4 class="modal-title">Thêm ca học mới</h4>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm(
                                    "CauHinhCaHocCreate",
                                    "GiamSatGiangDay",
                                    new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,//cach thuc update du lieu. Thay the hay them vao
                                    HttpMethod = "POST",
                                    UpdateTargetId ="modalGiamSatGiangDay_CauHinhCaHoc_c",
                                    LoadingElementId = "loader"
                                }, new { @class = "form-horizontal", id = "frm_CreateCauHinhCaHoc" }))
        {
            
            
            @Html.HiddenFor(model => Model.CaGuid)
            
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)





            <div class="form-group validate-label">
                @Html.LabelFor(model => Model.CaID, new { @class = "col-sm-4 control-label", @for = "text_CaID" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.CaID, new { @class = "form-control", id = "text_CaID" })
                    @Html.ValidationMessageFor(model => Model.CaID, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>

             <div class="form-group ">
                @Html.LabelFor(model => Model.TietBatDau, new { @class = "col-sm-4 control-label", @for = "text_TietBatDau" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.TietBatDau, new { @class = "form-control", id = "text_TietBatDau" })
                    @Html.ValidationMessageFor(model => Model.TietBatDau, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            
             <div class="form-group ">
                @Html.LabelFor(model => Model.SoTiet, new { @class = "col-sm-4 control-label", @for = "text_SoTiet" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.SoTiet, new { @class = "form-control", id = "text_SoTiet" })
                    @Html.ValidationMessageFor(model => Model.SoTiet, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
        }

    </div>
    <div class="modal-footer">

        
           <div class="col-sm-12  text-center">
               
                   
                    <button type="button" onclick="GiamSatGiangDay_CauHinhCaHoc_OnSaveExit('#callbackGiamSatGiangDay_CauHinhCaHoc', 'true', '#frm_CreateCauHinhCaHoc')" class="btn btn-success">Lưu & Thoát</button>
                    <button type="button" onclick="GiamSatGiangDay_CauHinhCaHoc_OnSaveExit('#callbackGiamSatGiangDay_CauHinhCaHoc', 'false', '#frm_CreateCauHinhCaHoc')" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
                    &nbsp;hoặc&nbsp;
                    
                    <a class="btn btn-link" data-otf-action="@Url.Action("CauHinhCaHocGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)" data-target="#GiamSatGiangDay_CauHinhCaHoc_DS_content" aria-hidden="true" data-dismiss="modal" onclick="GiamSatGiangDay_CauHinhCaHoc_BakList(this)"> Quay lại</a>

                    <input type="hidden" id="callbackGiamSatGiangDay_CauHinhCaHoc"
                           data-otf-target="#modalGiamSatGiangDay_CauHinhCaHoc"
                           data-otf-target-exit="#GiamSatGiangDay_CauHinhCaHoc_DS_content"
                           data-otf-action-exit="@Url.Action("CauHinhCaHocGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)"
                           data-otf-action="@Url.Action("CauHinhCaHocEdit", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.CaGuid" />



               
            </div>
    </div>

</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
             //Su dung cau hinh dropdownlist
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Lỗi! Vui lòng chọn ít nhất 1 mục.' },
                '.chosen-select-width': { width: "95%" }
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }
            

        </script>
, true);
}




