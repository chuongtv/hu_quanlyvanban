@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model nvngoc31122015.giamsatgiangday.library.PhieuMuonPhong.XacNhanPhieuMuonPhongView
<div id="page-heading">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">
                <i class="fa fa-lg fa-home text-warning text-size-20">
                </i> Trang chủ
            </a>
        </li>
        <li class="active">
            Xác nhận Phiếu mượn phòng
        </li>
    </ol>
</div>

@*content*@
<div class="container" id="CPPhieuMuonPhong">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group text-center"> <h3>PHIẾU ĐĂNG KÝ MƯỢN PHÒNG</h3></div>
            <div class="form-group ">
                <div class="col-sm-3 col-sm-offset-3">
                    <label class=" control-label" id="lblDonVi">Mã giảng viên:</label>
                    <label class=" control-label">@Model.NhanVienID</label>
                </div>
                <div class="col-sm-3">
                    <label class=" control-label" id="lblDonVi">Tên giảng viên:</label>
                    <label class=" control-label">@Model.HoVaTen</label>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-sm-6 col-sm-offset-3">
                    <label class=" control-label">Đơn vị:</label>
                    <label class=" control-label">@Model.DonViName</label>
                </div>
            </div>

            <div class="form-group ">
                <div class="col-sm-6 col-sm-offset-3">
                    <label class=" control-label" id="lblDonVi">Nội dung mượn:</label>
                    <label class=" control-label">@Model.NoiDung</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <table style="margin-bottom: 0px;" class="table table-bordered datatables dataTable">
                        <thead>
                            <tr>
                                <th class="col-xs-9 col-sm-3">Phòng</th>
                                <th class="col-xs-9 col-sm-3">Ngày</th>
                                <th class="col-sm-6 hidden-xs">Ca</th>
                            </tr>
                        </thead>
                        <tbody class="selects">
                            @foreach (nvngoc31122015.giamsatgiangday.library.PhieuMuonPhong.XacNhanPhieuMuonPhongChiTietView item in Model.ListPhongDaCap)
                            {
                                <text>
                                    <tr>

                                        <td>@item.PhongID</td>
                                        <td>@item.NgayMuonPhong.Value.ToString("dd/MM/yyyy")</td>
                                        <td class="hidden-xs">@item.CaID</td>
                                    </tr>
                                </text>
                            }


                        </tbody>

                    </table>
                </div>
            </div><br />
            <div class="row">
                <div class="form-group ">


                    <div class="col-sm-6 col-sm-offset-3">
                        <textarea class="form-control " id="textComment" placeholder="Ghi chú của thư ký..."></textarea>
                        <br />
                        <div id="chat" class="panel-comment" style="overflow-y: auto;max-height:150px;" tabindex="5000">
                            @Html.Action("PhieuMuonPhong_GetThongTinPhanHoi", "GiamSatGiangDay", new { ItemGuid = Model.PhieuMuonPhongGuid })

                        </div>


                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 text-center">
                    <div class="btn-toolbar">
                        <a class="btn btn-default" href="@Url.Action("PhieuMuonPhong", "GiamSatGiangDay", null, Request.Url.Scheme)">Quay lại</a>
                        @if ((@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("PhieuMuonPhong_XacNhanPhieu_GiamSatGiangDay"))
                        {
                            if (Model.TinhTrangPhieuGuid != ioiort.settingdata.library.ContentSettingData.GetDataSettingValue(project.config.library.ConfigurationCache.Cache_PhieuMuonPhong_TinhTrangDaGui).Trim()
                                && Model.TinhTrangPhieuGuid != ioiort.settingdata.library.ContentSettingData.GetDataSettingValue(project.config.library.ConfigurationCache.Cache_PhieuMuonPhong_TinhTrangHoanThanh).Trim()
                                )
                                {
                                    <text>
                          
                                <a href="javascript:void(0)"
                                   data-otf-action-target="@Url.Action("PhieuMuonPhong", "GiamSatGiangDay", null, Request.Url.Scheme)"
                                   data-otf-ghichu="#textComment"
                                   data-otf-action="@Url.Action("PhieuMuonPhong_XacNhanPhieu", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@ioiort.settingdata.library.ContentSettingData.GetDataSettingValue(project.config.library.ConfigurationCache.Cache_PhieuMuonPhong_TinhTrangDaGui).Trim()&p=@Model.PhieuMuonPhongGuid"
                                   onclick="GiamSatGiangDay_PhieuMuonPhong_XacNhanPhieuMuon(this)" class="btn btn-success">Gửi lại</a>
                                 </text>
                                }
                            if (Model.TinhTrangPhieuGuid == ioiort.settingdata.library.ContentSettingData.GetDataSettingValue(project.config.library.ConfigurationCache.Cache_PhieuMuonPhong_TinhTrangDaCapPhong).Trim())
                                {
                                    <text>
                                <a href="javascript:void(0)"
                                   data-otf-action-target="@Url.Action("PhieuMuonPhong", "GiamSatGiangDay", null, Request.Url.Scheme)"
                                   data-otf-ghichu="#textComment"
                                   data-otf-action="@Url.Action("PhieuMuonPhong_XacNhanPhieu", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@ioiort.settingdata.library.ContentSettingData.GetDataSettingValue(project.config.library.ConfigurationCache.Cache_PhieuMuonPhong_TinhTrangHoanThanh).Trim()&p=@Model.PhieuMuonPhongGuid"
                                   onclick="GiamSatGiangDay_PhieuMuonPhong_XacNhanPhieuMuon(this)"
                                   class="btn btn-success"> Đồng ý</a>
                            </text>
                        }
                        }
                       

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

@section Styles {
    @Styles.Render("~/plugins/chosenStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/module/GiamSatGiangDay/PhieuMuonPhong")
}



