                    <input type="hidden" id="callbackGiamSatGiangDay_CauHinhPhong"
                           data-otf-target="#modalGiamSatGiangDay_CauHinhPhong"
                           data-otf-target-exit="#GiamSatGiangDay_CauHinhPhong_DS_content"
                           data-otf-action-exit="@Url.Action("CauHinhPhongGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)"
                           data-otf-action="@Url.Action("CauHinhPhongEdit", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhongGuid" />
            
         
        </div>
    </div>

</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
             //Su dung cau hinh dropdownlist
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Lỗi! Vui lòng chọn ít nhất 1 mục.' },
                '.chosen-select-width': { width: "95%" }
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }
            function FillLau3() {
                var abbr3 = $("#DDLCoSo3").val();
                getLau3(abbr3);
            }

            function getLau3(abbr) {
                $.ajax({
                    url: "@Url.Action("FillLau", "GiamSatGiangDay")",
                    data: { CoSoGuid: abbr },
                dataType: "json",
                type: "POST",
                error: function() {
                    alert("An error occurred.");
                },
                success: function(data) {
                    var items = "";
                    $("#DDLlau3").empty().append('<option value="00000000-0000-0000-0000-000000000000">---Chọn lầu---</option>');
                    $.each(data, function(i, item) {
                        items += "<option value=\"" + item.ValueString + "\">" + item.Name + "</option>";
                    });
                    $("#DDLlau3").html(items);
                    $('#DDLlau3').trigger('chosen:updated');
                }
            });

            }

        </script>
, true);
}




