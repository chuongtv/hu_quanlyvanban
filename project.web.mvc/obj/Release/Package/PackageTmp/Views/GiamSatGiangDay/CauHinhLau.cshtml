                                    data-otf-input="#GiamSatGiangDay_CauHinhLau_SearchInput"
                                    data-otf-action="@Url.Action("CauHinhLauGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)?idnv=@Request["id"]&k="
