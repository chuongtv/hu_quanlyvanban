@{
    ViewBag.Title = "Lịch trình giảng dạy";
}
<div id="page-heading">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">
                <i class="fa fa-lg fa-home text-warning text-size-20">
                </i> Trang chủ
            </a>
        </li>
        <li>
            <a href="@Url.Action("DSThoiKhoaBieuMoiGiang", "GiamSatGiangDay")">Thời khóa biểu</a>
        </li>
        <li class="active">
            @ViewBag.Title
        </li>
    </ol>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-right">
            <a class="btn btn-default"
               href="@Url.Action("DSThoiKhoaBieuMoiGiang", "GiamSatGiangDay", null, Request.Url.Scheme)">Quay lại</a>
        </div>
    </div>
    <div class="row">
        <div id="GiamSatGiangDay_ThoiKhoaBieuChiTiet_DS_content">
            @Html.Action("ThoiKhoaBieuChiTietGet_List", "GiamSatGiangDay", Request["id"])
