@model nvngoc31122015.giamsatgiangday.library.GiamSatGiangDay.CreateCauHinhCoSoView

<div class="modal-content">
    <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
        <h4 class="modal-title">Thêm mới cơ sở</h4>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm(
                                    "CauHinhCoSoCreate",
                                    "GiamSatGiangDay",
                                    new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,//cach thuc update du lieu. Thay the hay them vao
                                    HttpMethod = "POST",
                                    UpdateTargetId ="modalGiamSatGiangDay_CauHinhCoSo_c",
                                    LoadingElementId = "loader"
                                }, new { @class = "form-horizontal", id = "frm_CreateCauHinhCoSo" }))
        {
            
            
            @Html.HiddenFor(model => Model.CoSoGuid)
            
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


           

            
             <div class="form-group ">
                @Html.LabelFor(model => Model.CoSoID, new { @class = "col-sm-4 control-label", @for = "text_CoSoID" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.CoSoID, new { @class = "form-control", id = "text_CoSoID" })
                    @Html.ValidationMessageFor(model => Model.CoSoID, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            
             <div class="form-group ">
                @Html.LabelFor(model => Model.CoSoName, new { @class = "col-sm-4 control-label", @for = "text_CoSoName" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.CoSoName, new { @class = "form-control", id = "text_CoSoName" })
                    @Html.ValidationMessageFor(model => Model.CoSoName, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            
             <div class="form-group ">
                @Html.LabelFor(model => Model.DiaChi, new { @class = "col-sm-4 control-label", @for = "text_DiaChi" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.DiaChi, new { @class = "form-control", id = "text_DiaChi" })
                    @Html.ValidationMessageFor(model => Model.DiaChi, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            
             <div class="form-group ">
                @Html.LabelFor(model => Model.DienTich, new { @class = "col-sm-4 control-label", @for = "text_DienTich" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.DienTich, new { @class = "form-control", id = "text_DienTich" })
                    @Html.ValidationMessageFor(model => Model.DienTich, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            
             <div class="form-group ">
                @Html.LabelFor(model => Model.SoPhongHoc, new { @class = "col-sm-4 control-label", @for = "text_SoPhongHoc" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.SoPhongHoc, new { @class = "form-control", id = "text_SoPhongHoc" })
                    @Html.ValidationMessageFor(model => Model.SoPhongHoc, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
        }
      
    </div>
    <div class="modal-footer">

        
           <div class="col-sm-12  text-center">
               
                   
                    <button type="button" onclick="GiamSatGiangDay_CauHinhCoSo_OnSaveExit('#callbackGiamSatGiangDay_CauHinhCoSo', 'true', '#frm_CreateCauHinhCoSo')" class="btn btn-success">Lưu & Thoát</button>
                    <button type="button" onclick="GiamSatGiangDay_CauHinhCoSo_OnSaveExit('#callbackGiamSatGiangDay_CauHinhCoSo', 'false', '#frm_CreateCauHinhCoSo')" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
                    &nbsp;hoặc&nbsp;
                    
                    <a class="btn btn-link" data-otf-action="@Url.Action("CauHinhCoSoGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)" data-target="#GiamSatGiangDay_CauHinhCoSo_DS_content" aria-hidden="true" data-dismiss="modal" onclick="GiamSatGiangDay_CauHinhCoSo_BakList(this)"> Quay lại</a>

                    <input type="hidden" id="callbackGiamSatGiangDay_CauHinhCoSo"
                           data-otf-target="#modalGiamSatGiangDay_CauHinhCoSo"
                           data-otf-target-exit="#GiamSatGiangDay_CauHinhCoSo_DS_content"
                           data-otf-action-exit="@Url.Action("CauHinhCoSoGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)"
                           data-otf-action="@Url.Action("CauHinhCoSoEdit", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.CoSoGuid" />



               
            </div>
    </div>

</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
             //Su dung cau hinh dropdownlist
  
            

        </script>
, true);
}




