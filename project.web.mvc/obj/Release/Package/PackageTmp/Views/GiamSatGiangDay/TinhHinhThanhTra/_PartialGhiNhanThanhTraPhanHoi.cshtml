@model nvngoc31122015.giamsatgiangday.library.GiamSatGiangDay.ThongTinGhiNhanThanhTra


<div class="modal-content">
    <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
        <h4 class="modal-title">Thông tin ghi nhận từ Thanh tra</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @*Thông tin thời khóa biểu*@
            <div class="form-group ">
                <div class="col-sm-6">Năm học: &nbsp;@Html.Raw(Model.NamHocName)</div>
                <div class="col-sm-6">Học kỳ:&nbsp;@Html.Raw(Model.HocKyID)</div>
            </div>
            <div class="form-group ">
                <div class="col-sm-6">Giảng viên: &nbsp;@Html.Raw(Model.NhanVienFullName)</div>
                <div class="col-sm-6">Mã giảng viên:&nbsp;@Html.Raw(Model.NhanVienID)</div>
            </div>
            <div class="form-group ">
                @*<div class="col-sm-6">
                    Loại hình giảng dạy: &nbsp;@if (Model.NhomThucHanh != -1 || Model.NhomThucHanh != null)
                    {
                        <text>Lý thuyết</text>
                    }
                    else
                    {
                        <text>Thực hành</text>
                    }
                </div>*@
                <div class="col-sm-6">Lớp:&nbsp;@Html.Raw(Model.LopThucTeGhep)</div>
            </div>
            <div class="form-group ">
                <div class="col-sm-6">Tên môn học: &nbsp;@Html.Raw(Model.MonHocName)</div>
                <div class="col-sm-6">Mã môn học:&nbsp;@Html.Raw(Model.MonHocID)</div>
            </div>
            <div class="form-group ">
                <div class="col-sm-6">Nhóm học: &nbsp;@Html.Raw(Model.NhomHoc)</div>
                <div class="col-sm-6">Nhóm thực hành:&nbsp;@Html.Raw(Model.NhomThucHanh)</div>
            </div>
            <div class="form-group ">
                <div class="col-sm-12">Thời gian dạy:&nbsp;Thứ&nbsp;@Html.Raw(Model.Thu)&nbsp;-&nbsp;Từ&nbsp;@Html.Raw(Model.ThoiGianBatDau.ToString("dd/MM/yyyy"))&nbsp;đến&nbsp;@Html.Raw(Model.ThoiGianKetThuc.ToString("dd/MM/yyyy"))</div>
            </div>
            @*Thông tin log*@
            @*<br />
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Lịch sử thanh tra</legend>
                <div class="form-group ">
                    <div class="col-sm-12">@Html.Raw(Model.LogSoLanDaKiemTra)</div>
                </div>
            </fieldset>*@
            @*Thông tin ghi nhận vi phạm*@
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Thông tin ghi nhận vi phạm</legend>
                <div class="form-group ">
                    <div class="col-sm-12">Loại vi phạm:&nbsp;@Html.Raw(Model.LoaiViPhamName)</div>
                </div>
                <div class="form-group ">
                    <div class="col-sm-12">Thời gian ghi nhận:&nbsp;@Html.Raw(Model.NgayLap.Value.ToString("hh:mm"))&nbsp;ngày&nbsp;@Html.Raw(Model.NgayLap.Value.ToString("dd/MM/yyyy"))</div>
                </div>
                <div class="form-group ">
                    <div class="col-sm-12">Ghi chú:</div>
                </div>
                <div class="form-group ">
                    <div class="col-sm-12 text-italic">@Html.Raw(Model.NoiDung)</div>
                </div>
            </fieldset>
            @*Khoa phản hồi*@
            <br />
            <div class="form-group ">
                <div class="col-sm-12"><b><u>Phản hồi từ Khoa/Viện/Trung tâm</u></b></div>
            </div>
            <div class="form-group ">
                <div class="col-sm-12">
                    @if (Model.IsLock == true
&& (@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_PhanHoi_GiamSatGiangDay"))
                    {
                        @Html.TextAreaFor(model => Model.YKienKhoa, new { @class = "form-control", id = "text_YKienKhoa" })
                    }
                    else
                    {
                        @Html.Raw(Model.YKienKhoa)
                    }
                </div>
            </div>
            @*Thanh tra phản hồi*@
            <br />
            <div class="form-group ">
                <div class="col-sm-12"><b><u>Phản hồi từ Thanh tra</u></b></div>
            </div>
            <div class="form-group ">
                <div class="col-sm-12">
                    @if (Model.IsLock == false && Model.IsDuyet == project.config.library.Utilities.ConstantVariable.GSGD_GhiNhanThanhTra_TinhTrangDuyet_ChuaPhanHoi
&& (@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_XacNhanKhongKyLuat_GiamSatGiangDay"))
                    {
                        @Html.TextAreaFor(model => Model.YKienThanhTra, new { @class = "form-control", id = "text_YKienThanhTra" })
                        @Html.ValidationMessageFor(model => Model.YKienThanhTra, null, new { @class = "text-danger" })
                    }
                    else
                    {
                        @Html.Raw(Model.YKienThanhTra)
                    }
                </div>
                <br />
                <div class="col-sm-12">
                    @*@if (Model.IsLock == false && Model.IsDuyet == int.Parse(ioiort.settingdata.library.ContentSettingData.GetDataSettingValue(project.config.library.ConfigurationCache.Cache_GhiNhanThanhTra_TinhTrangDuyet_ChuaPhanHoi).Trim())
                        && (@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_XacNhanKhongKyLuat_GiamSatGiangDay"))
                                            {*@
                    @Html.Action("LoadUploadOne", "FileSystem", new { itemguid = Model.PhieuGhiNhanGuid, id = 8, auto = "true", isDelete = Model.IsLock == false ? true : false, liststyle = 1, mo = "ThongTinGhiNhan" })
                    @*}*@
                </div>
                @*s = style hiển thị danh sách file 0:1; 0 dạng block, 1 là dạng list
                    d ="true" :"fasle" cho phép delete hay k
                    id quy định nơi upload file, nơi load file lên trong contantvalble*@
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-sm-12 text-right">
            @if (Model.IsLock == false)
            {
                if ((@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_XacNhanKhongKyLuat_GiamSatGiangDay"))
                {
                    <a class="btn btn-primary" data-otf-confirm="Bạn có chắc chắn không kỷ luật vi phạm này?" href="javascript:void(0)" data-otf-action="@Url.Action("TinhHinhThanhTra_ThongTinGhiNhan_XacNhanKhongKyLuat", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhieuGhiNhanGuid" data-otf-text="#text_YKienThanhTra" onclick="TinhHinhThanhTra_ThongTinGhiNhan_PhanHoi(this)">Xác nhận không kỷ luật</a>
                }

                if ((@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_KhongDuyetPhanHoi_GiamSatGiangDay"))
                {
                    <a class="btn btn-primary" data-otf-confirm="Bạn có chắc chắn không duyệt giải trình vi phạm này?" href="javascript:void(0)" data-otf-action="@Url.Action("TinhHinhThanhTra_ThongTinGhiNhan_KhongDuyetPhanHoi", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhieuGhiNhanGuid" data-otf-text="#text_YKienThanhTra" onclick="TinhHinhThanhTra_ThongTinGhiNhan_KhongDuyetPhanHoi(this)">Không duyệt</a>
                }

                if (Model.IsDuyet == project.config.library.Utilities.ConstantVariable.GSGD_GhiNhanThanhTra_TinhTrangDuyet_ChuaPhanHoi
                    && (@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_PhanHoi_GiamSatGiangDay"))
                {
                    <a class="btn btn-primary" data-otf-confirm="Bạn có chắc chắn muốn phản hồi ghi nhận vi phạm này?" href="javascript:void(0)" data-otf-action="@Url.Action("TinhHinhThanhTra_ThongTinGhiNhan_PhanHoi", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhieuGhiNhanGuid" data-otf-text="#text_YKienKhoa" onclick="TinhHinhThanhTra_ThongTinGhiNhan_PhanHoi(this)">Gởi phản hồi</a>
                }

                if ((@User as project.web.mvc.Common.IOIORTPrincipal).HasPermission("TinhHinhThanhTra_ThongTinGhiNhan_XoaGhiNhanViPham_GiamSatGiangDay"))
                {
                    <a class="btn btn-danger" data-otf-confirm="Bạn có chắc chắn muốn hủy ghi nhận vi phạm này?" href="javascript:void(0)" data-otf-action="@Url.Action("TinhHinhThanhTra_ThongTinGhiNhan_XoaGhiNhanViPham", "GiamSatGiangDay", null, Request.Url.Scheme)?id=@Model.PhieuGhiNhanGuid" onclick="TinhHinhThanhTra_ThongTinGhiNhan_XoaGhiNhanViPham(this)">Xóa ghi nhận vi phạm</a>
                }
            }
            <a class="btn btn-link" data-otf-action="@Url.Action("TinhHinhThanhTraGet_List", "GiamSatGiangDay", null, Request.Url.Scheme) " data-target="#GiamSatGiangDay_DS_content" aria-hidden="true" data-dismiss="modal" onclick="TinhHinhThanhTra_ThongTinGhiNhan_BackList(this)"> Quay lại</a>
        </div>
    </div>
</div>