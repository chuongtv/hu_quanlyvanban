
@{
    ViewBag.Title = "Quản lý danh sách khóa phòng";
}
<div id="page-heading">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">
                <i class="fa fa-lg fa-home text-warning text-size-20">
                </i> Trang chủ
            </a>
        </li>
        <li class="active">
            @ViewBag.Title
        </li>
    </ol>
</div>
<div class="container">
    <div class="row">
        @*các thao tác*@
        <div class="panel panel-primary">
            <div class="panel-body">
                @Html.Action("QuanLyPhieuKhoaPhong_LoadSearch", "GiamSatGiangDay")


                <div class="row form-group">
                    <div class="col-sm-12">
                        <button id="GiamSatGiangDay_QuanLyDanhSachMuonPhong_buttonsearch"
                                type="button"
                                title="Tìm kiếm"
                                class="btn btn-primary"
                                data-otf-target="#GiamSatGiangDay_DS_content"
                                data-otf-action="@Url.Action("QuanLyPhieuKhoaPhongGet_List", "GiamSatGiangDay", null, Request.Url.Scheme)"
                                onclick="GiamSatGiangDay_QuanLyKhoaPhong_IsSearch(this)">
                            Xem thông tin
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group">

            <div class="col-sm-12 text-right">
                <a href="@Url.Action("KhoaPhong", "GiamSatGiangDay", null, Request.Url.Scheme)"
                   class="btn btn-success"
                   title="Tạo phiếu khóa phòng">
                    Tạo phiếu khóa phòng
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12" id="GiamSatGiangDay_DS_content">
                @Html.Action("QuanLyPhieuKhoaPhongGet_List", "GiamSatGiangDay", new {})
            </div>
        </div>
        <div class="row">
            <div id="DetailBieuMauPrint"></div>
        </div>
    </div>
</div>
