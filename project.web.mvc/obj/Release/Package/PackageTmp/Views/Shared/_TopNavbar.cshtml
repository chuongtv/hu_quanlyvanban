<header class="navbar navbar-inverse navbar-fixed-top" role="banner">
    <a title="" data-placement="right" data-toggle="tooltip" class="tooltips ioiort-mobile" id="leftmenu-trigger" data-original-title="Toggle Sidebar"></a>

    @*su dung cho chatting sau nay*@
    @*<a id="rightmenu-trigger" class="tooltips" data-toggle="tooltip" data-placement="left" title="Toggle Infobar"></a>*@


    <div class="navbar-header pull-left">
        <a class="navbar-brand" href="~/home">GIÁM SÁT TÌNH HÌNH GIẢNG DẠY</a>
    </div>

    <ul class="nav navbar-nav pull-right toolbar">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle username" data-toggle="dropdown">
                <span class="hidden-xs">
                    Tài khoản
                    <i class="fa fa-caret-down"></i>
                </span><img src="~/demo/avatar/dangerfield.png" alt="Dangerfield" />
            </a>
            <ul class="dropdown-menu userinfo arrow">
                <li class="username">
                    <a href="#">
                        <div class="pull-left"><img class="userimg" src="/demo/avatar/dangerfield.png" alt="Jeff Dangerfield" /></div>
                        <div class="pull-right"><h5>Chào, @User.Identity.Name</h5><small>Đã truy cập bằng <span>@User.Identity.Name</span></small></div>

                    </a>
                </li>
                <li class="userlinks">
                    <ul class="dropdown-menu">
                        <li style="display:none;"><a href="#">Edit Profile <i class="pull-right fa fa-pencil"></i></a></li>
                        <li style="display:none;"><a href="#">Account <i class="pull-right fa fa-cog"></i></a></li>
                        <li style="display:none;"><a href="#">Help <i class="pull-right fa fa-question-circle"></i></a></li>
                        <li @Html.IsSelected(action: "Manage", controller: "Account")>
                            @if (Request.IsAuthenticated)
                            {
                                <a href="@Url.Action("Manage", "Account")"> Đổi mật khẩu<i class="pull-right fa fa-key"></i></a>
                            }

                        </li>
                        <li class="divider"></li>
                        <li style="padding:0 13px;">
                            @if (Request.IsAuthenticated)
                            {
                                <text>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()">
                                            Thoát hệ thống
                                            <i class="pull-right fa fa-sign-out"></i>
                                        </a>
                                    }
                                </text>
                            }

                        </li>
                    </ul>
                </li>
            </ul>
        </li>
        <li class="dropdown" style="display:none;">
            <a href="#" class="hasnotifications dropdown-toggle" data-toggle='dropdown'><i class="fa fa-envelope"></i><span class="badge">1</span></a>
