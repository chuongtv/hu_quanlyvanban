@{
    ViewBag.Title = "ManageRoleForCode";
}
<div id="page-heading">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Dashboards")">
                <i class="fa fa-lg fa-home text-warning text-size-20">
                </i> Trang chủ
            </a>
        </li>
        <li class="active">
            Quản lý role for code
        </li>
    </ol>
</div>

@*content*@
<div class="container">
    <div class="row">
        @*các thao tác*@
        <div class="show">
            <div class="col-sm-4 col-sm-push-8" style="text-align:right;">
                <div class="form-group ">
                    <button data-otf-mutil="true"
                            onclick="ManageRoleForCode_RoleForCode_DeleteMulti(this)"
                            data-otf-confirm="Bạn có chắc muốn xóa những dòng đã chọn?"
                            data-otf-target="#CPManageRoleForCode"
                            data-otf-input="#SearchRoleForCode"
                            data-otf-action-target="@Url.Action("RoleForCodeGet_List", "ManagePermission")?k="
                            data-otf-action="@Url.Action("RoleForCodeDelete", "ManagePermission", null, Request.Url.Scheme)?id="
                            class=" btn btn-danger"
                            title="Xóa">
                        <i class="fa fa-trash-o"></i> Xóa
                    </button>
                    <a class=" btn btn-success" href="@Url.Action("RoleForCodeCreate", "ManagePermission", null, Request.Url.Scheme)">
                        <i class="fa fa-plus" title="Tạo mới"></i> Thêm mới
                    </a>
                </div>
            </div>
            <div class="col-sm-8  col-sm-pull-4">
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.DropDownList("ddlListApp",
                                                   new SelectList(ViewBag.ListApp, "ValueString", "Name"),
                                          new
                                          {
                                              @class = "form-control chosen-select",
                                              onchange = "DropdownlistChange(this,'#buttonsearch')",
                                              id = "ddlListApp"
                                          })
                    </div>
                    <div class="col-sm-3">
                        @Html.DropDownList("ddlListModule",
                                          new SelectList(ViewBag.ListModule, "ValueString", "Name"),
                                          new
                                          {
                                              @class = "form-control chosen-select",
                                              onchange = "DropdownlistChange(this,'#buttonsearch')",
                                              id = "ddlListModule"
                                          })
                    </div>
                    <div class="input-group col-sm-6">
                        <input id="SearchRoleForCode"
                               placeholder="Thông tin cần tìm"
                               onkeypress="return ManageRoleForCode_RoleForCode_EnterEvent(event, '#buttonsearch')"
                               class="form-control " />
                        <span class="input-group-btn">
                            <button id="buttonsearch"
                                    type="button"
                                    title="Tìm kiếm"
                                    class="btn btn-primary"
                                    data-otf-target="#CPManageRoleForCode"
                                    data-otf-input="#SearchRoleForCode"
                                    data-otf-input1="#ddlListApp"
                                    data-otf-input2="#ddlListModule"
                                    data-otf-action="@Url.Action("RoleForCodeGet_List", "ManagePermission", null, Request.Url.Scheme)?k="
                                    onclick="ManageRoleForCode_RoleForCode_IsSearch(this)">
                                Tìm kiếm
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div id="CPManageRoleForCode">
                @Html.Action("RoleForCodeGet_List", "ManagePermission")
            </div>
        </div>
    </div>
</div>

@section dialog {
    <!-- QLTTNhanSu_ThongTinNhanThan UNIT MODAL -->
    <div class="modal inmodal fade" id="modalManagePermission_RoleForCode" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" id="modalManagePermission_RoleForCode_c">
        </div> 
    </div>
}




@section Scripts {
    @Scripts.Render("~/module/ManagePermission/ManageRoleForCode")
}




