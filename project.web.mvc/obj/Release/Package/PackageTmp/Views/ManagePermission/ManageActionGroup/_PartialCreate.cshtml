@model nvngoc29082015.permission.library.ManageActionGroup.CreateActionGroupView
<div class="row">
    <div class="col-sm-12">

        @using (Ajax.BeginForm(
                                    "ActionGroupCreate",
                                    "ManagePermission",
                                    new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "POST",
                                    UpdateTargetId = "CPManageActionGroup",
                                    LoadingElementId = "loader"
                                }, new { @class = "form-horizontal", id = "frm_CreateActionGroup" }))
        {
            @Html.HiddenFor(model => Model.ActionGroupGuid)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="form-group">
                @Html.LabelFor(model => Model.ActionGroupID, new { @class = "col-sm-2 control-label", @for = "text_ActionGroupID" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.ActionGroupID, new { @class = "form-control", id = "text_ActionGroupID" })
                    @Html.ValidationMessageFor(model => Model.ActionGroupID, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => Model.ActionGroupName, new { @class = "col-sm-2 control-label", @for = "text_ActionGroupName" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.ActionGroupName, new { @class = "form-control", id = "text_ActionGroupName" })
                    @Html.ValidationMessageFor(model => Model.ActionGroupName, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.ControllerGuid, new { @class = "col-sm-2 control-label", @for = "DDL_LoaiSanPham_Guid" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(model => Model.ControllerGuid, new SelectList(Model.ListController, "ValueString", "Name"), new { @class = "form-control chosen-select", id = "DDL_ControllerGuid" })
                    @Html.ValidationMessageFor(model => Model.ControllerGuid, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(model => Model.Description, new { @class = "col-sm-2 control-label", @for = "text_Description" })
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => Model.Description, new { @class = "form-control", id = "text_Description" })
                    @Html.ValidationMessageFor(model => Model.Description, null, new { @class = "text-danger" })
                </div>
                
            </div>

            <div class="form-group">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    @Html.CheckBoxFor(model => Model.IsActive, new { @class = "", @checked = "checked", id = "chek_IsActive" })
                    @Html.LabelFor(model => Model.IsActive, new { @class = "control-label", @for = "chek_IsActive" })
                    @Html.ValidationMessageFor(model => Model.IsActive, null, new { @class = "text-danger" })
                </div>
            </div>
        }
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 text-center">
                <div class="btn-toolbar">
                    <button type="submit" onclick="ManageActionGroup_ActionGroup_OnSaveExit('#callback', 'true', '#frm_CreateActionGroup')" class="btn btn-success">Lưu & Thoát</button>
                    <button type="submit" onclick="ManageActionGroup_ActionGroup_OnSaveExit('#callback', 'false', '#frm_CreateActionGroup')" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>&nbsp;hoặc&nbsp;
                    <a class="btn btn-link" href="@Url.Action("ManageActionGroup", "ManagePermission", null, Request.Url.Scheme)">Quay lại</a>

                    <input type="hidden" id="callback"
                           data-otf-action-exit="@Url.Action("ManageActionGroup", "ManagePermission", null, Request.Url.Scheme)"
                           data-otf-action="@Url.Action("ActionGroupEdit", "ManagePermission", null, Request.Url.Scheme)?id=@Model.ActionGroupGuid" />
                </div>
            </div>
        </div>

    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            //Su dung cau hinh dropdownlist
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Lỗi! Vui lòng chọn ít nhất 1 mục.' },
                '.chosen-select-width': { width: "95%" }
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }
          
            if (typeof CKEDITOR != 'undefined') {
                var a = CKEDITOR.replace('text_Description', {
                    customConfig: '../../../Scripts/ManagePermission/ManageActionGroup/jsCKEditor-custom.js'
                });
            }
        </script>
, true);
}



