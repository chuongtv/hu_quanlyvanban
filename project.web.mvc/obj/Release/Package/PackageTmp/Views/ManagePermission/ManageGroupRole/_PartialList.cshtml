@model MvcPaging.IPagedList<nvngoc29082015.permission.library.ManageGroupRole.ListGroupRoleView>
@using MvcPaging

@{var i = 1;}

<div class="table-responsive">
    @if (Model.TotalItemCount > 0)
    {
        <div class="p-b-10">
            Kết quả tìm kiếm: <b>@Model.TotalItemCount</b> nhóm quyền
        </div>
        <text>
            <table class="table table-bordered datatables dataTable">
                <thead>
                    <tr>
                        <th class="text-center w-30">
                            <input id="CheckBoxAll" onclick="javascript: checkAlllist('#listcheckall',this);" type="checkbox" />
                        </th>
                        <th class="text-center">
                            #
                        </th>
                        <th class="text-left w-150">
                            @Html.DisplayNameFor(model => Model[0].AspNetRoleGroupID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].GroupAspNetRoleName)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => Model[0].SanPhamMoTa_Des)
                        </th>
                        <th class="text-right w-100">
                            @Html.DisplayNameFor(model => Model[0].Ngay_Time)
                        </th>*@
                        <th class="text-center w-100">
                            @Html.DisplayNameFor(model => Model[0].IsActive)
                        </th>
                        <th class="text-right w-100"></th>

                    </tr>
                </thead>
                <tbody id="listcheckall">
                    @foreach (var item in Model)
                    {
                    <tr data="@item.AspNetRoleGroupGuid" class="showhim">
                        <td class="text-center">
                            <input type="checkbox" class="checkbox-item" value="@item.AspNetRoleGroupGuid" />
                        </td>
                        <td class="text-center w-50">
                            @Html.Raw((Model.PageNumber - 1) * Model.PageSize + i)
                            @{i++;}
                        </td>
                        <td class="text-left w-100">
                            @Html.Raw(item.AspNetRoleGroupID)
                        </td>
                        <td>
                            @Html.Raw(item.GroupAspNetRoleName)
                        </td>
                        @*<td>
                            @Html.Raw(item.SanPhamMoTa_Des)
                        </td>
                        <td class="text-right w-100">
                            @Html.Raw(item.Ngay_Time.Value.ToString("dd/MM/yyyy"))
                        </td>*@
                        <td class="text-center w-100">
                            @Html.CheckBoxFor(x => item.IsActive, new { disabled = "disabled" })
                        </td>
                        <td class="text-right w-100">

                            <a data-otf-confirm="Bạn có chắc muôn xóa?"
                               title="Xóa dữ liệu này" href="javascript:void(0)"
                               onclick="ManageGroupRole_GroupRole_DeleteMulti(this)"
                               data-otf-target="#CPManageGroupRole"
                               data-otf-input="#SearchGroupRole"
                               data-otf-action-target="@Url.Action("GroupRoleGet_List", "ManagePermission")?k="
                               data-otf-action="@Url.Action("GroupRoleDelete", "ManagePermission", null, Request.Url.Scheme)?id=@item.AspNetRoleGroupGuid">
                                <i class="fa fa-lg fa-trash-o text-danger"></i>
                            </a>
                            &nbsp
                            <a href="@Url.Action("GroupRoleEdit", "ManagePermission", null, Request.Url.Scheme)?id=@item.AspNetRoleGroupGuid"
                               title="Chỉnh sửa">
                                <i class="fa fa-lg fa-pencil-square-o text-info"></i> Edit Group
                            </a>

                            &nbsp||&nbsp
                            <a href="@Url.Action("ManageGroupRoleDetail", "ManagePermission", null, Request.Url.Scheme)?id=@item.AspNetRoleGroupGuid"
                               title="Quyền trong group">
                                <i class="fa fa-lg fa-pencil-square-o text-info"></i> Role in Group
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </text>
    }
    else
    {
        <text><br />
    <div class="alert alert-dismissable alert-info">
        <strong>Yêu cầu tìm kiếm lúc @{ var date = DateTime.Now; } @date.ToString("HH:mm:ss dd/MM/yyyy") không có dữ liệu</strong>
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
    </div>
        </text>
    }
    <div class="pager">
        @if (Model.TotalItemCount > Model.PageSize)
        {

            <text>

                @Html.Raw(Ajax.Pager(
                       new Options
                       {
                           PageSize = Model.PageSize,
                           TotalItemCount = Model.TotalItemCount,
                           CurrentPage = Model.PageNumber,
                           ItemTexts = new ItemTexts() { Next = "Next", Previous = "Previous", Page = "" },
                           ItemIcon = new ItemIcon() { First = "icon-backward", Previous = "icon-chevron-left", Next = "icon-chevron-right", Last = "icon-forward" },
                           TooltipTitles = new TooltipTitles() { Next = "Next page", Previous = "Previous page", Page = "Page {0}." },
                           Size = Size.normal,
                           Alignment = Alignment.centered,
                           IsShowControls = true,
                           IsShowFirstLast = true,
                           CssClass = ""
                       },
                       new AjaxOptions
                       {
                           UpdateTargetId = "CPManageGroupRole"
                       }, new { controller = "ManagePermission", action = "GroupRoleGet_List", k = @ViewData["keysearch"] }))
            </text>
        }
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            loadSelect("ManageGroupRole");
        </script>
, true);
}



