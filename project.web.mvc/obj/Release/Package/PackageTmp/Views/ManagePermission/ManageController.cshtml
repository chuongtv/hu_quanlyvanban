@{
    ViewBag.Title = "ManageController";
}
<div id="page-heading">
    <ol class="breadcrumb">
        <li class="active">
            <a href="@Url.Action("Index", "Dashboards")">
                <i class="fa fa-lg fa-home text-warning text-size-20">
                </i> Trang Chủ
            </a>
        </li>
        <li>
            <a href="@Url.Action("ManagePermission", "ManagePermission")">
                <i>
                </i>Quản Lý Phân Quyền
            </a>
        </li>
        <li class="active">
            Quản lý controller
        </li>
    </ol>
</div>

@*content*@
<div class="container">
    <div class="row">
        @*các thao tác*@
        <div class="show">
            <div class="col-sm-4 col-sm-push-8" style="text-align:right;">
                <div class="form-group ">
                    <button data-otf-mutil="true"
                            onclick="ManageController_Controller_DeleteMulti(this)"
                            data-otf-confirm="Bạn có chắc muốn xóa những dòng đã chọn?"
                            data-otf-target="#CPManageController"
                            data-otf-input="#SearchController"
                            data-otf-action-target="@Url.Action("ControllerGet_List", "ManagePermission")?k="
                            data-otf-action="@Url.Action("ControllerDelete", "ManagePermission", null, Request.Url.Scheme)?id="
                            class=" btn btn-danger"
                            title="Xóa">
                        <i class="fa fa-trash-o"></i> Xóa
                    </button>
                    <a class=" btn btn-success" href="@Url.Action("ControllerCreate", "ManagePermission", null, Request.Url.Scheme)">
                        <i class="fa fa-plus" title="Tạo mới"></i> Thêm mới
                    </a>
                </div>
            </div>
            <div class="col-sm-8  col-sm-pull-4">
                <div class="form-group">
                    <div class="input-group">
                        <input id="SearchController"
                               placeholder="Thông tin cần tìm"
                               onkeypress="return ManageController_Controller_EnterEvent(event, '#buttonsearch')"
                               class="form-control " />
                        <span class="input-group-btn">
                            <button id="buttonsearch"
                                    type="button"
                                    title="Tìm kiếm"
                                    class="btn btn-primary"
                                    data-otf-target="#CPManageController"
                                    data-otf-input="#SearchController"
                                    data-otf-action="@Url.Action("ControllerGet_List", "ManagePermission", null, Request.Url.Scheme)?k="
                                    onclick="ManageController_Controller_IsSearch(this)">
                                Tìm kiếm
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div id="CPManageController">
                @Html.Action("ControllerGet_List", "ManagePermission")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/module/ManagePermission/ManageController")
}




