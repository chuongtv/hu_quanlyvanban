@model MvcPaging.IPagedList<nvngoc29082015.permission.library.ManageModule.ListModuleView>
@using MvcPaging

@{var i = 1;}

<div class="table-responsive">
    @if (Model.TotalItemCount > 0)
    {
        <div class="p-b-10">
            Kết quả tìm kiếm: <b>@Model.TotalItemCount</b> Module
        </div>
        <text>
            <table class="table table-bordered datatables dataTable">
                <thead>
                    <tr>
                        <th class="text-center w-50">
                            <input id="CheckBoxAll" onclick="javascript: checkAlllist('#listcheckall',this);" type="checkbox" />
                        </th>
                        <th class="text-center w-50">
                            #
                        </th>
                        <th class="text-left">
                            @Html.DisplayNameFor(model => Model[0].ModuleID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].ModuleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].AppName)
                        </th>
                        <th class="text-center" width="200px">
                            @Html.DisplayNameFor(model => Model[0].IsActive)
                        </th>
                        <th class="text-center" width="200px">Tác vụ</th>
                    </tr>
                </thead>
                <tbody id="listcheckall">
                    @foreach (var item in Model)
                    {
                        <tr data="@item.ModuleGuid" class="showhim">
                            <td class="text-center">
                                <input type="checkbox" class="checkbox-item" value="@item.ModuleGuid" />
                            </td>
                            <td class="text-center">
                                @Html.Raw((Model.PageNumber - 1) * Model.PageSize + i)
                                @{i++;}
                            </td>
                            <td class="text-left">
                                @Html.Raw(item.ModuleID)
                            </td>
                            <td>
                                @Html.Raw(item.ModuleName)
                            </td>
                            <td>
                                @Html.Raw(item.AppName)
                            </td>
                            <td class="text-center w-100">
                                @Html.CheckBoxFor(x => item.IsActive, new { disabled = "disabled" })
                            </td>
                            <td class="text-center w-100">

                                <a data-otf-confirm="Bạn có chắc muôn xóa?"
                                   title="Xóa dữ liệu này" href="javascript:void(0)"
                                   onclick="ManageModule_Module_DeleteMulti(this)"
                                   data-otf-target="#CPManageModule"
                                   data-otf-input="#SearchModule"
                                   data-otf-action-target="@Url.Action("ModuleGet_List", "ManagePermission")?k="
                                   data-otf-action="@Url.Action("ModuleDelete", "ManagePermission", null, Request.Url.Scheme)?id=@item.ModuleGuid">
                                    <i class="fa fa-lg fa-trash-o text-danger"></i>
                                </a>
                                &nbsp
                                <a href="@Url.Action("ModuleEdit", "ManagePermission", null, Request.Url.Scheme)?id=@item.ModuleGuid"
                                   title="Chỉnh sửa">
                                    <i class="fa fa-lg fa-pencil-square-o text-info"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </text>
    }
    else
    {
        <text><br />
    <div class="alert alert-dismissable alert-info">
        <strong>Yêu cầu tìm kiếm lúc @{ var date = DateTime.Now; } @date.ToString("HH:mm:ss dd/MM/yyyy") không có dữ liệu</strong>
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
    </div>
        </text>
    }
    <div class="pager">
        @if (Model.TotalItemCount > Model.PageSize)
        {
            <text>

                @Html.Raw(Ajax.Pager(
                       new Options
                       {
                           PageSize = Model.PageSize,
                           TotalItemCount = Model.TotalItemCount,
                           CurrentPage = Model.PageNumber,
                           ItemTexts = new ItemTexts() { Next = "Next", Previous = "Previous", Page = "" },
                           ItemIcon = new ItemIcon() { First = "icon-backward", Previous = "icon-chevron-left", Next = "icon-chevron-right", Last = "icon-forward" },
                           TooltipTitles = new TooltipTitles() { Next = "Next page", Previous = "Previous page", Page = "Page {0}." },
                           Size = Size.normal,
                           Alignment = Alignment.centered,
                           IsShowControls = true,
                           IsShowFirstLast = true,
                           CssClass = ""
                       },
                       new AjaxOptions
                       {
                           UpdateTargetId = "CPManageModule"
                       }, new { controller = "ManagePermission", action = "ModuleGet_List", k = @ViewData["keysearch"] }))
            </text>
        }
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            loadSelect("ManageModule");
        </script>
, true);
}



