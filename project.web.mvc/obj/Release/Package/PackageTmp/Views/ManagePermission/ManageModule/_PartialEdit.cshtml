@model nvngoc29082015.permission.library.ManageModule.UpdateModuleView

<div class="row">
    <div class="col-sm-12">

        @using (Ajax.BeginForm(
                                    "ModuleEdit",
                                    "ManagePermission",
                                    new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,//cach thuc update du lieu. Thay the hay them vao
                                    HttpMethod = "POST",
                                    UpdateTargetId = "CPManageModule",
                                    LoadingElementId = "loader"
                                }, new { @class = "form-horizontal", id = "frm_EditModule" }))
        {
            @Html.HiddenFor(model => Model.ModuleGuid)

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => Model.ModuleID, new { @class = "col-sm-2 control-label", @for = "text_ModuleID" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.ModuleID, new { @class = "form-control", id = "text_ModuleID" })
                    @Html.ValidationMessageFor(model => Model.ModuleID, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(model => Model.ModuleName, new { @class = "col-sm-2 control-label", @for = "text_ModuleName" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.ModuleName, new { @class = "form-control", id = "text_ModuleName" })
                    @Html.ValidationMessageFor(model => Model.ModuleName, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.AppGuid, new { @class = "col-sm-2 control-label", @for = "DDL_AppGuid" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(model => Model.AppGuid, new SelectList(Model.ListAppGuid, "ValueString", "Name"), new { @class = "form-control chosen-select", id = "DDL_AppGuid" })
                    @Html.ValidationMessageFor(model => Model.AppGuid, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-10">
                    @Html.CheckBoxFor(model => Model.IsActive, new { @class = "", @checked = "checked", id = "chek_IsActive" })
                    @Html.LabelFor(model => Model.IsActive, new { @class = "", @for = "chek_IsActive" })
                    @Html.ValidationMessageFor(model => Model.IsActive, null, new { @class = "text-danger" })
                </div>
            </div>

        }

    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 text-center">
            <div class="btn-toolbar">
                <button type="button"
                        onclick="ManageModule_Module_DeleteView(this)"
                        data-otf-action="@Url.Action("ModuleDelete", "ManagePermission", null, Request.Url.Scheme)?id=@Model.ModuleGuid"
                        data-otf-action-exit="@Url.Action("ManageModule", "ManagePermission", null, Request.Url.Scheme)"
                        data-otf-confirm="Bạn muốn xóa dữ liệu này?"
                        class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Xóa
                </button>
                <button type="button" onclick="ManageModule_Module_OnSaveExit('#callbackManageModule_Module', 'true', '#frm_EditModule')" class="btn btn-success">Lưu & Thoát</button>
                <button type="button" onclick="ManageModule_Module_OnSaveExit('#callbackManageModule_Module', 'false', '#frm_EditModule')" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>&nbsp;hoặc&nbsp;
                <a class="btn btn-link" href="@Url.Action("ManageModule", "ManagePermission", null, Request.Url.Scheme)"> Trở lại</a>

                <input type="hidden" id="callbackManageModule_Module"
                       data-otf-action-exit="@Url.Action("ManageModule", "ManagePermission", null, Request.Url.Scheme)"
                       data-otf-action="@Url.Action("ModuleEdit", "ManagePermission", null, Request.Url.Scheme)?id=@Model.ModuleGuid" />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            //Su dung cau hinh dropdownlist
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Lỗi! Vui lòng chọn ít nhất 1 mục.' },
                '.chosen-select-width': { width: "95%" }
            }
            for (var selector in config) {
                $(selector).chosen(config[selector]);
            }
        </script>
, true);
}




