@{
    ViewBag.Title = "Import danh sách Emails";
}
@model ntdai16032016.maketing.library.QuanLySendEmails.ImportEmailsStep1View
@*breadcrumb*@
<div id="page-heading">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Dashboards")">
                <i class="fa fa-lg fa-home text-warning text-size-20">
                </i> Trang chủ
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index","DoanhNghiep")">Quản lý Emails</a>
        </li>
        <li class="active">
            Import danh sách Emails
        </li>
    </ol>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12" id="contentImport">
            <div class="row">
                <div class="col-sm-4">
                    <a class="btn btn-default-alt" href='@Url.Action("QuanLySendEmails", "QuanLyMaketting")' title="Quay lại"><i class="fa fa-lg fa-reply"></i> Quay lại</a>
                </div>
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <div class="ibox">
                        <div class="ibox-content">
                            <div class="mail-box">
                                @using (Html.BeginForm("ImportEmailsStep1", "QuanLyMaketting", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {


                                    @Html.AntiForgeryToken()
                                    <div class="panel panel-primary">
                                        <div class="panel-body">
                                            <div class="row">
                                                @Html.LabelFor(model => model.GroupEmailGuid, new { @class = "col-sm-3 control-label" })
                                                <div class="col-sm-9">
                                                    @Html.DropDownListFor(model => Model.GroupEmailGuid, new SelectList(Model.ListNhomDoiTuong, "ValueString", "Name"), new { @class = "form-control chosen-select", id = "DDL_GroupEmailGuid" })
                                                    @Html.ValidationMessageFor(m => m.GroupEmailGuid, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            

                                            <br />

                                            <div class="row">
                                                <div class="col-sm-12">
                                                    @Html.Raw(ViewBag.Error)
                                                    @Html.ValidationMessageFor(m => m.File, null, new { @class = "text-danger" })
                                                </div>
                                            </div>



                                            <br />
                                            <div class="row">
                                                @Html.LabelFor(model => model.File, new { @class = "col-sm-3 control-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(m => m.File, new { type = "file" })

                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    File excel mẫu: <a href="~/Data/Template/Import_Emails.xlsx"><i class="fa fa-cloud-download"></i> Import danh sách Emails</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel-footer">
                                            <div class="pull-right">
                                                <button id="btnSearch" type="submit" title="Tải lên" class="btn btn-primary p-b-5">
                                                    <i class="fa fa-lg fa-cloud-upload"></i> Tải lên
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row text-danger">

                        @Html.Raw(ViewBag.Error)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



