<div class="row">
    @*các thao tác*@
    <div class="show">
        <div class="col-sm-4 col-sm-push-8" style="text-align:right;">
            <div class="form-group ">
                <button data-otf-mutil="true"
                        onclick="QuanLySendEmails_GroupEmails_DeleteMulti(this)"
                        data-otf-confirm="Bạn có chắc muốn xóa những dòng đã chọn?"
                        data-otf-target="#QuanLySendEmails_GroupEmails_DS_content"
                        data-otf-input="#QuanLySendEmails_GroupEmails_SearchInput"
                        data-otf-action-target="@Url.Action("GroupEmailsGet_List", "QuanLyMaketting")?k="
                        data-otf-action="@Url.Action("GroupEmailsDelete", "QuanLyMaketting", null, Request.Url.Scheme)?id="
                        class=" btn btn-danger"
                        title="Xóa">
                    <i class="fa fa-trash-o"></i> Xóa
                </button>
                <a data-toggle="modal" onclick="QuanLySendEmails_GroupEmails_GetView(this)"
                   data-target="#modalQuanLySendEmails_GroupEmails" class=" btn btn-success" data-otf-action="@Url.Action("GroupEmailsCreate", "QuanLyMaketting", null, Request.Url.Scheme)?id=@Request["id"]" href="javascript:void(0)">
                    <i class="fa fa-plus" title="Tạo mới"></i> Thêm mới
                </a>
                <a class=" btn btn-primary" href="@Url.Action("ImportEmailsStep1", "QuanLyMaketting", null, Request.Url.Scheme)">
                    <i class="fa fa-plus" title="Thêm nhiều email vào nhóm"></i> Import Email
                </a>

            </div>
        </div>
        <div class="col-sm-8  col-sm-pull-4">
            <div class="form-group">
                <div class="input-group">
                    <input id="QuanLySendEmails_GroupEmails_SearchInput"
                           placeholder="Thông tin cần tìm"
                           onkeypress="return QuanLySendEmails_GroupEmails_EnterEvent(event, '#QuanLySendEmails_GroupEmails_buttonsearch')"
                           class="form-control " />
                    <span class="input-group-btn">
                        <button id="QuanLySendEmails_GroupEmails_buttonsearch"
                                type="button"
                                title="Tìm kiếm"
                                class="btn btn-primary"
                                data-otf-target="#QuanLySendEmails_GroupEmails_DS_content"
                                data-otf-input="#QuanLySendEmails_GroupEmails_SearchInput"
                                data-otf-action="@Url.Action("GroupEmailsGet_List", "QuanLyMaketting", null, Request.Url.Scheme)?k="
                                onclick="QuanLySendEmails_GroupEmails_IsSearch(this)">
                            Tìm kiếm
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12" id="QuanLySendEmails_GroupEmails_DS_content">
        @Html.Action("GroupEmailsGet_List", "QuanLyMaketting")
    </div>
</div>

