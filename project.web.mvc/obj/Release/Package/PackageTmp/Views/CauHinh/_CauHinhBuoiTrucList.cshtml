        </div>
        <button type="button" class="btn btn-primary btn-sm" ng-click="fnSearch()" data-ng-init="fnSearch()">Search</button>
        <button type="button" class="btn btn-primary btn-sm" ng-click="fnAddNew()">Add new</button>

        <button type="button" class="btn btn-primary btn-sm" ng-click="">Delete</button>
    </div>

    <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered datatables">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>TenGoi</th>
                <th>KyHieu</th>
                <th>GiaTriNgayThang</th>
                <th>GiaTriSoInt</th>
                <th>GiaTriNgayDecimal</th>
                <th>GiaTriKieuBit</th>
            </tr>
        </thead>

        <tbody ng-repeat="item in listBuoiTruc">
            <tr>
                <td>[{{$index + 1}}]</td>
                <td>{{item.BuoiTrucID}}</td>
                <td>{{item.TenGoi}}</td>
                <td>{{item.KyHieu}}</td>
                <td>{{item.GiaTriNgayThang | amDateFormat:'HH:mm DD/MM/YYYY' }}</td>
                <td>{{item.GiaTriSoInt}}</td>
                <td >{{item.GiaTriNgayDecimal | awnum:'number'}}</td>    @*Chua hieu vi sao ko chay*@
                <td>{{item.GiaTriKieuBit}}</td>
                <td>
                    <a href="#" ng-click="fnDelete(item.BuoiTrucID)">Delete</a>
                    <a ng-click="fnOpenForEdit(item.BuoiTrucID)">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>
