@using project.web.mvc.Models;
@model quanlyvanban151116.tvchuong.library.Models.VanBan
@using PagedList.Mvc;
@model PagedList.PagedList<VanBan>
@{
    ViewBag.Title = "Vanban_Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý sản phẩm</h2>
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách văn bản
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Xóa tất cả</button>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th> </th>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Sô Văn Bản</th>
                                <th>Nội dung</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.VanBanID">

                                    <td><input type="checkbox" class="chkId" name="chkId" value="@item.VanBanID" /></td>
                                    <td>@item.VanBanID</td>
                                    <td>@item.TieuDe</td>
                                    <td>@item.SoVanBan</td>
                                    <td>@item.TomTatNoiDung</td>
                                    <td>
                                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.SanPhamID }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.SanPhamID }) |
                                        @Html.ActionLink("Xoá", "Delete", new { id = item.SanPhamID })
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
