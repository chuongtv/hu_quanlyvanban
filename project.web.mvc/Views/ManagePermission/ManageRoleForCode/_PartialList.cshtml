@model MvcPaging.IPagedList<nvngoc29082015.permission.library.ManageRoleForCode.ListRoleForCodeView>
@using MvcPaging

@{var i = 1;}

<div class="table-responsive">
    @if (Model.TotalItemCount > 0)
    {
        <div class="p-b-10">
            Kết quả tìm kiếm: <b>@Model.TotalItemCount</b> role for code
        </div>
        <text>
            <table class="table table-bordered datatables dataTable">
                <thead>
                    <tr>
                        <th class="text-center" style="width:50px;">
                            <input id="CheckBoxAll" onclick="javascript: checkAlllist('#listcheckall',this);" type="checkbox" />
                        </th>
                        <th class="text-center" style="width:50px;">
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].RoleForCodeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].Description)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => Model[0].SoLuongAction)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].ModuleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model[0].AppName)
                        </th>
                        <th class="text-right w-100"></th>
                    </tr>
                </thead>
                <tbody id="listcheckall">
                    @foreach (var item in Model)
                    {
                        <tr data="@item.RoleForCodeGuid" class="showhim">
                            <td class="text-center">
                                <input type="checkbox" class="checkbox-item" value="@item.RoleForCodeGuid" />
                            </td>
                            <td class="text-center">
                                @Html.Raw((Model.PageNumber - 1) * Model.PageSize + i)
                                @{i++;}
                            </td>
                            @*<td class="text-left w-100">
                                    @Html.Raw(item.RoleForCodeID)
                                </td>*@
                            <td>
                                @Html.Raw(item.RoleForCodeName)
                            </td>
                            <td>
                                @Html.Raw(item.Description)
                            </td>
                            <td class="text-center">
                                @Html.Raw(item.SoLuongAction)
                            </td>
                            <td>
                                @Html.Raw(item.ModuleName)
                            </td>
                            <td>
                                @Html.Raw(item.AppName)
                            </td>
                            <td class="text-right w-100">

                                <a data-otf-confirm="Bạn có chắc muôn xóa?"
                                   title="Xóa dữ liệu này" href="javascript:void(0)"
                                   onclick="ManageRoleForCode_RoleForCode_DeleteMulti(this)"
                                   data-otf-target="#CPManageRoleForCode"
                                   data-otf-input="#SearchRoleForCode"
                                   data-otf-action-target="@Url.Action("RoleForCodeGet_List", "ManagePermission")?k="
                                   data-otf-action="@Url.Action("RoleForCodeDelete", "ManagePermission", null, Request.Url.Scheme)?id=@item.RoleForCodeGuid">
                                    <i class="fa fa-lg fa-trash-o text-danger"></i>
                                </a>
                                &nbsp;
                                <a href="@Url.Action("RoleForCodeEdit", "ManagePermission", null, Request.Url.Scheme)?id=@item.RoleForCodeGuid"
                                   title="Chỉnh sửa">
                                    <i class="fa fa-lg fa-pencil-square-o text-info"></i>
                                </a>
                                &nbsp;
                                <a data-otf-action="@Url.Action("LoadActionByroleForCode_List", "ManagePermission", null, Request.Url.Scheme)?id=@item.RoleForCodeGuid"
                                   data-toggle="modal" onclick="ManagePermission_RoleForCode_GetView(this)"
                                   data-target="#modalManagePermission_RoleForCode" title="Danh sách action đã cài đặt cho cấu hình này">
                                    <i class="fa fa-lg fa-eye text-success"></i>
                                </a>
                                &nbsp;
                                <a href="@Url.Action("ManageRoleForCodeConfigAction", "ManagePermission", null, Request.Url.Scheme)?id=@item.RoleForCodeGuid"
                                   title="Cấu hình action">
                                    <i class="fa fa-lg fa-wrench text-success"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </text>
    }
    else
    {
        <text><br />
    <div class="alert alert-dismissable alert-info">
        <strong>Yêu cầu tìm kiếm lúc @{ var date = DateTime.Now; } @date.ToString("HH:mm:ss dd/MM/yyyy") không có dữ liệu</strong>
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
    </div>
        </text>
    }
    <div class="pager">
        @if (Model.TotalItemCount > Model.PageSize)
        {

            <text>

                @Html.Raw(Ajax.Pager(
                       new Options
                       {
                           PageSize = Model.PageSize,
                           TotalItemCount = Model.TotalItemCount,
                           CurrentPage = Model.PageNumber,
                           ItemTexts = new ItemTexts() { Next = "Next", Previous = "Previous", Page = "" },
                           ItemIcon = new ItemIcon() { First = "icon-backward", Previous = "icon-chevron-left", Next = "icon-chevron-right", Last = "icon-forward" },
                           TooltipTitles = new TooltipTitles() { Next = "Next page", Previous = "Previous page", Page = "Page {0}." },
                           Size = Size.normal,
                           Alignment = Alignment.centered,
                           IsShowControls = true,
                           IsShowFirstLast = true,
                           CssClass = ""
                       },
                       new AjaxOptions
                       {
                           UpdateTargetId = "CPManageRoleForCode"
                       }, new { controller = "ManagePermission", action = "RoleForCodeGet_List", k = @ViewData["keysearch"] }))
            </text>
        }
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            loadSelect("ManageRoleForCode");
        </script>
, true);
}



