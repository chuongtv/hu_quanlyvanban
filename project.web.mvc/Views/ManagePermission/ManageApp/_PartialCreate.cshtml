@model nvngoc29082015.permission.library.ManageApp.CreateAppView
<div class="row">
    <div class="col-sm-12">

        @using (Ajax.BeginForm(
                                    "AppCreate",
                                    "ManagePermission",
                                    new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "POST",
                                    UpdateTargetId = "CPManageApp",
                                    LoadingElementId = "loader"
                                }, new { @class = "form-horizontal", id = "frm_CreateApp" }))
        {
            @Html.HiddenFor(model => Model.AppGuid)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="form-group">
                @Html.LabelFor(model => Model.AppID, new { @class = "col-sm-2 control-label", @for = "text_AppID" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.AppID, new { @class = "form-control", id = "text_AppID" })
                    @Html.ValidationMessageFor(model => Model.AppID, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(model => Model.AppName, new { @class = "col-sm-2 control-label", @for = "text_AppName" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => Model.AppName, new { @class = "form-control", id = "text_AppName" })
                    @Html.ValidationMessageFor(model => Model.AppName, null, new { @class = "text-danger" })
                </div>
                <div class="col-sm-2">

                </div>
            </div>

           <div class="form-group">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-4">
                    @Html.CheckBoxFor(model => Model.IsActive, new { @class = "", @checked = "checked", id = "chek_IsActive" })
                    @Html.LabelFor(model => Model.IsActive, new { @class = "control-label", @for = "chek_IsActive" })
                    @Html.ValidationMessageFor(model => Model.IsActive, null, new { @class = "text-danger" })
                </div>

            </div>
            
            <div class="form-group ">
                @Html.LabelFor(model => Model.Desctiption, new { @class = "col-sm-2 control-label", @for = "text_Description" })
                <div class="col-sm-6">
                    @Html.TextAreaFor(model => Model.Desctiption, new { @class = "form-control", id = "text_Description" })
                    @Html.ValidationMessageFor(model => Model.Desctiption, null, new { @class = "text-danger" })
                </div>
            </div>

        }
        <div class="form-horizontal" style="display:none">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    File đính kèm
                </label>
                <div class="col-sm-8">
                    @*2 hàm ulupload 1 cho xóa và k xóa*@
                    @*@Html.Action("LoadUploadOne", "FileSystem", new { itemguid = Model.AppGuid, id = 1, auto = "false", isDelete = "true" })*@
                    @*@Html.Action("LoadUploadOne", "FileSystem", new { itemguid = Model.AppGuid, id = 1, auto = "false", isDelete = "false" })*@

                    @*s = style hiển thị danh sách file 0:1; 0 dạng block, 1 là dạng list
                    d ="true" :"fasle" cho phép delete hay k
                    id quy định nơi upload file, nơi load file lên trong ConstantVariable*@
                    @Html.Action("LoadUploadFiles", "FileSystem", new { itemguid = Model.AppGuid, id = 1, auto = "false", d = "true", s = 1 })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 text-center">
                <div class="btn-toolbar">
                    <button type="submit" onclick="ManageApp_App_OnSaveExit('#callback', 'true', '#frm_CreateApp')" class="btn btn-success">Lưu & Thoát</button>
                    <button type="submit" onclick="ManageApp_App_OnSaveExit('#callback', 'false', '#frm_CreateApp')" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>&nbsp;hoặc&nbsp;
                    <a class="btn btn-link" href="@Url.Action("ManageApp", "ManagePermission", null, Request.Url.Scheme)">Quay lại</a>

                    <input type="hidden" id="callback"
                           data-otf-action-exit="@Url.Action("ManageApp", "ManagePermission", null, Request.Url.Scheme)"
                           data-otf-action="@Url.Action("AppEdit", "ManagePermission", null, Request.Url.Scheme)?id=@Model.AppGuid" />
                </div>
            </div>
        </div>

    </div>
</div>

